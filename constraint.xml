<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="WE FOUND YOU A DRIVER"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/found"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver will pickup you in 02:35"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#EF0E09"
        android:id="@+id/pickup"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/found" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/phone"
        android:src="@drawable/phonecall"
        app:layout_constraintLeft_toLeftOf="@id/pickup"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/pickup" />
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/messenger"
        android:id="@+id/message"
        app:layout_constraintRight_toRightOf="@id/pickup"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/pickup" />
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connor Chavez"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/name"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tofpic" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/rating"
        android:layout_marginTop="5dp"
        android:id="@+id/rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ST3751"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/t1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/rate" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="- Toyota Vios"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#6E706B"
        android:id="@+id/t2"
        app:layout_constraintStart_toEndOf="@+id/t1"
        app:layout_constraintTop_toBottomOf="@id/rate" />
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/download"
        app:layout_constraintTop_toBottomOf="@id/pickup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:id="@+id/imd"
        />


    <TextView
        android:id="@+id/tofpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginTop="-30dp"
        android:background="#FF2442"
        android:text="JUBERGO"
        android:textColor="@color/white"

        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/imd"
        />

</androidx.constraintlayout.widget.ConstraintLayout>